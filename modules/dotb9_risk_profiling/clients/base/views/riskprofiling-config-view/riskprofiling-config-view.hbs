{{#if isAdmin}}
<div class="content">
	<div class="headerpane">
		<h1>
			<span data-name="title" data-type="label" class="record-cell">
				<span class="table-cell-wrapper">
					<span data-index="" data-fieldname="title" class="index">
						<span sfuuid="11" class="list-headerpane"><b>{{str 'LBL_RISK_PROFILING_CONFIGURATION' this.module}}</b></span>
					</span>
				</span>
			</span>
		</h1>
	</div>
	<div class="flex-list-view left-actions right-actions"  style="top: 81px;padding-top: 20px;position: relative;">
		<div class="flex-list-view-content" style="bottom:0;height: 78%;margin:129px 0;overflow-x: auto;overflow-y:auto !important;position: fixed;top:0;width:100%;">
			<table class="table table-striped dataTable" style="overflow: auto !important;position:relative;">
				<thead>
				<tr>
				<th data-fieldname="edit_button">
					<div style="position: relative;">
						<span></span>
					</div>
				</th>
				<th data-fieldname="{{str 'LBL_ATTRIBUTES' this.module}}" style="min-width:200px">
					<div style="position: relative;">
						<span style="font-size:13px"><b>{{str 'LBL_ATTRIBUTES' this.module}}</b></span>
					</div>
				</th>
				<th data-fieldname="{{str 'LBL_RISK_FACTOR' this.module}}">
					<div style="position: relative;">
						<span style="font-size:13px"><b> {{str 'LBL_RISK_FACTOR' this.module}}</b></span>
					</div>
				</th>
				{{#each profilingData}}
					{{#if bankName}}
						<th data-fieldname="bankName">
							<div style="position: relative;">
								<span style="font-size:13px"><b> {{bankName}} </b></span>
							</div>
						</th>
					{{/if}}
				{{/each}}
				<th data-fieldname="edit_button">
					<div style="position: relative;">
						<span></span>
					</div>
				</th>
				</tr>
				</thead>
				<tbody>
					{{#each grid}}
						<tr class="single">
							<td></td>
							<td colspan="{{colspans}}" style="text-align: left;font-size:14px"><b>{{str label ../this.module}}</b></td>
						</tr>
						{{#each this}}	
							<tr class="single" id="{{this.id}}">
								<td id="{{this.id}}">
									
									<a class="cancelButton" name="inline-cancel" style="display:{{this.cancelView}}" id="cancel_{{this.id}}"> Cancel</a>
								</td>
								{{#each this.data}}	
									<td data-type="{{type}}" id="{{modelId}}" name="{{name}}">
										{{#if name}}
											{{field ../../../../this model=../../../../this.riskProfilingModel template=fieldView}}
										{{else}}
											{{#eq label 'risk_factor'}}
												{{#if riskFactor}}
													<img src="custom/themes/default/images/{{riskFactor}}.png" title="Risk Factor" width="90px" height="30px">
												{{/if}}
											{{/eq}}
											 {{#notEq label 'risk_factor'}}
												<span class="record-label" data-name="{{name}}" style=" white-space: normal;">{{str label ../../../../../this.riskProfilingModel.module}}</span>
											{{/notEq}}
										{{/if}}
									</td> 
								{{/each}}
								<td data-type="{{type}}" id="{{modelId}}" name="{{name}}">
									
										<button class="saveButton btn btn-primary" name="save_button" title="Save" id="{{this.id}}" style="display:{{this.saveView}}">Save</button>
									
										<button class="editButton btn btn-primary" name="edit_button" title="Edit" id="{{this.id}}" style="display:{{this.editView}}">Edit</button>
								</td>
						</tr>
						{{/each}}
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>
{{/if}}
