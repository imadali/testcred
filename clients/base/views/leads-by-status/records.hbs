<div class="tab-pane active">
    {{#if collection.length}}
        <ul class="unstyled listed" data-action="pagination-body">
  
            {{#each collection.models}}
                
                   <li>
                    {{#if ../../row_actions}}
                        <div class="actions pull-right">
                            {{#each ../../row_actions}}
                                {{field ../../../this model=../this}}
                            {{/each}}
                        </div>
                    {{/if}}
                    {{#if ../overdueBadge}}
                        {{#with ../../overdueBadge}}
                            {{field ../../../this model=../../this template='detail'}}
                        {{/with}}
                    {{/if}}
                 <div class="details">
                    <span>
                        {{#if attributes.assigned_user_id}}
                            <a href="#{{buildRoute module="Leads" id=attributes.assigned_user_id action="detail"}}" class="pull-left avatar avatar-md" data-title="{{fieldValue this "assigned_user_name"}}">
                                <img class="avatar hide" src="" data-src="{{fieldValue this "picture_url"}}" alt="{{fieldValue this "assigned_user_name"}}">
                                <span class="hide">Le</span>
                            </a>
                        {{else}}
                            <span class="fa fa-stack pull-left">
                                <i class="fa fa-user fa-stack-base"></i>
                                <i class="fa fa-question-circle fa-light"></i>
                            </span>
                        {{/if}}
                    </span>
                    <span><a href="#{{buildRoute model=this action="detail"}}">{{fieldValue this "name"}}</a></span>
                    <span>{{fieldValue this "credit_amount_c"}}</span>
                    
                    
                        {{#if attributes.assigned_user_id}}
                            <span><a href="#{{buildRoute module="Leads" id=attributes.assigned_user_id action="detail"}}">{{fieldValue this "assigned_user_name"}}</a></span>
                        {{else}}
                            <span>{{str "LBL_UNASSIGNED" this.module}}</span>
                        {{/if}}
                        {{relativeTime attributes.record_date class='date'}}&nbsp;&nbsp;&nbsp;
                    </div>
                   
                </li>
            {{/each}}
            
        </ul>
    {{else}}
        <div class="block-footer">{{#if ../collection.dataFetched}}{{str "LBL_NO_DATA_AVAILABLE" this.module}}{{else}}{{str "LBL_LOADING" this.module}}{{/if}}</div>
    {{/if}}
</div>